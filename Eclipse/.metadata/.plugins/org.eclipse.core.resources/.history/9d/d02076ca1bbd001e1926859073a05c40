	  //js.executeAsyncScript("window.scrollBy(0,document.body.scrollHeight)");
	 // Thread.sleep(3000);
	  obj.enterpword(pass);
	  obj.confirmpass(upass);
	  js.executeScript("window.scrollBy(0,1500)");
	  obj.clicklogin();
	  
  }
  
